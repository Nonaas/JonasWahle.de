@page "/downloads"

<PageTitle>Downloads</PageTitle>

<MudStack Spacing="4" Class="mb-3">
    <MudStack Spacing="0">
        <MudText Typo="Typo.h4">Downloads</MudText>
    </MudStack>

    <MudGrid Spacing="3">
        <DownloadItemCard ImagePath="img/downloads/mein-planer.png"
                       BackgroundColorString="#854495"
                       FontColorString="#ffffff"
                       Title="Mein Planer"
                       Description="Aufgaben und ToDo-Listen App mit Gamification."
                       PlatformsIcons="@(new(){Icons.Material.Filled.Android, Icons.Custom.Brands.MicrosoftWindows})"
                       HrefURL="https://gamewhale-studios.itch.io/mytasker" />

        <DownloadItemCard ImagePath="img/downloads/desk-dash.png"
                       BackgroundColorString="#ff9900"
                       Title="Desk Dash"
                       Description="Benutze dein Android-Smartphone als Fernsteuerung für deinen Windows-PC."
                       PlatformsIcons="@(new(){Icons.Material.Filled.Android, Icons.Custom.Brands.MicrosoftWindows})"
                       HrefURL="https://gamewhale-studios.itch.io/deskdash" />

        <DownloadItemCard ImagePath="img/downloads/locked-and-loaded.png"
                       BackgroundColorString="#f04324"
                       Title="Locked'n'Loaded"
                       Description="Actiongeladener Top-Down Twin-Stick-Shooter für Android."
                       PlatformsIcons="@(new(){Icons.Material.Filled.Android})"
                       HrefURL="https://gamewhale-studios.itch.io/locked-n-loaded" />

        <DownloadItemCard ImagePath="img/downloads/flapping-birb.png"
                       BackgroundColorString="#52a0b1"
                       Title="Flapping Birb"
                       Description="Einfaches, aber herausforderndes Spiel, bei dem die Spieler einen Vogel steuern und ihn durch Rohre navigieren müssen."
                       PlatformsIcons="@(new(){Icons.Material.Filled.Android})"
                       HrefURL="https://gamewhale-studios.itch.io/flapping-birb" />
    </MudGrid>

</MudStack>