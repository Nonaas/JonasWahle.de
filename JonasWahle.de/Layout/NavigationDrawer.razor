<MudLayout>
    <MudAppBar Elevation="1" Dense Class="topbar">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Dark" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
    </MudAppBar>
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudDrawer @bind-Open="@drawerIsOpen" ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Sm" Elevation="1" Variant="@DrawerVariant.Temporary">
            <NavigationMenu />
        </MudDrawer>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudDrawer @bind-Open="@drawerIsOpen" ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Sm" Elevation="1" Variant="@DrawerVariant.Mini">
            <NavigationMenu />
        </MudDrawer>
    </MudHidden>

    <MudMainContent Class="pt-8">

            <article class="content px-4">
                @ChildContent
            </article>

            <Footer />

            <MudScrollToTop>
                <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.ArrowUpward" />
            </MudScrollToTop>

    </MudMainContent>
</MudLayout>


@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private bool drawerIsOpen = false;


    private void ToggleDrawer()
    {
        drawerIsOpen = !drawerIsOpen;
    }
}
